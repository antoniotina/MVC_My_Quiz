{% extends  'base.html.twig'%}

{% block body %}

	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<h1>Add Quiz</h1>
		<a class="nav-link" href="{{ path('addquiz', {'number': 10}) }}">Add 10 question quiz</a>
		<a class="nav-link" href="{{ path('addquiz', {'number': 20}) }}">Add 20 question quiz</a>
	{% endif %}
	<h1>Quiz list</h1>
	<ul>
		{% for categorie in categories %}
			<li class="nav-item">
				<a class="nav-link" href="{{ path('showquiz', {'id': categorie.id}) }}">{{ categorie.name }}</a>
			</li>
		{% endfor %}
	</ul>

{% endblock %}
